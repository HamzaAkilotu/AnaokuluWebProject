@{
    ViewData["Title"] = "Galeri";
}

<link rel="stylesheet" href="~/css/galeri.css" />

<div class="galeri-page-full" style="background:#fff !important; color:#800020 !important; min-height:100vh; width:100vw;">
    <div class="galeri-header">
        <h1 class="galeri-baslik" style="color:#800020 !important; font-family: 'Fredoka One', 'Comic Neue', cursive, sans-serif !important;">GALERİ</h1>
        <p class="galeri-breadcrumb" style="color:#800020 !important; font-family: 'Fredoka One', 'Comic Neue', cursive, sans-serif !important;">Anasayfa / Galeri</p>
    </div>
    <div class="galeri-flex-row">
        <div class="galeri-col galeri-left">
            <div class="galeri-item-baslik" style="color:#800020 !important; font-family: 'Fredoka One', 'Comic Neue', cursive, sans-serif !important;">23 Nisan Kutlaması</div>
            <div class="galeri-img-wrapper" style="width:240px;height:320px;overflow:hidden;display:flex;align-items:center;justify-content:center;">
                <img src="/images/nisan.jpg" class="galeri-img" alt="23 Nisan Kutlaması" style="width:100%;height:100%;object-fit:cover;" />
            </div>
        </div>
        <div class="galeri-center-group">
            <div class="galeri-col">
                <div class="galeri-item-baslik" style="color:#800020 !important; font-family: 'Fredoka One', 'Comic Neue', cursive, sans-serif !important;">Sonbaharın Sonu</div>
                <div class="galeri-img-wrapper" style="width:240px;height:320px;overflow:hidden;display:flex;align-items:center;justify-content:center;">
                    <img src="/images/sonbahar.jpg" class="galeri-img" alt="Sonbaharın Sonu" style="width:100%;height:100%;object-fit:cover;" />
                </div>
            </div>
            <div class="galeri-col">
                <div class="galeri-item-baslik" style="color:#800020 !important; font-family: 'Fredoka One', 'Comic Neue', cursive, sans-serif !important;">Notaların Algoritması</div>
                <div class="galeri-img-wrapper" style="width:240px;height:320px;overflow:hidden;display:flex;align-items:center;justify-content:center;">
                    <img src="/images/algoritma.jpg" class="galeri-img" alt="Notaların Algoritması" style="width:100%;height:100%;object-fit:cover;" />
                </div>
            </div>
            <div class="galeri-col">
                <div class="galeri-item-baslik" style="color:#800020 !important; font-family: 'Fredoka One', 'Comic Neue', cursive, sans-serif !important;">Oyun Bahçemiz</div>
                <div class="galeri-img-wrapper" style="width:240px;height:320px;overflow:hidden;display:flex;align-items:center;justify-content:center;">
                    <img src="/images/Park1.webp" class="galeri-img" alt="Oyun Bahçemiz" style="width:100%;height:100%;object-fit:cover;" />
                </div>
            </div>
        </div>
        <div class="galeri-col galeri-right">
            <div class="galeri-item-baslik" style="color:#800020 !important; font-family: 'Fredoka One', 'Comic Neue', cursive, sans-serif !important; white-space:nowrap; font-size:1.1rem;">Kendi Dünyamızı Tanımak</div>
            <div class="galeri-img-wrapper" style="width:240px;height:320px;overflow:hidden;display:flex;align-items:center;justify-content:center;">
                <img src="/images/rehberlik.jpg" class="galeri-img" alt="Kendi Dünyamızı Tanımak" style="width:100%;height:100%;object-fit:cover;" />
            </div>
        </div>
    </div>
</div> 