@{
    ViewData["Title"] = "Yaptığımız Etkinlikler";
}
@await Html.PartialAsync("_KurumsalPartial", ("Yaptığımız Etkinlikler", "Her hafta farklı temalar, atölyeler ve gezilerle çocuklarımızın sosyal ve bilişsel gelişimini destekliyoruz.", "/images/etkinlikler.jpg"))

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">Yaptığımız Etkinlikler</h2>
            <div id="etkinliklerContainer" class="etkinlikler-grid">
                <!-- Etkinlikler AJAX ile yüklenecek -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadEtkinlikler() {
            $.ajax({
                url: '/api/Etkinlik',
                type: 'GET',
                success: function(response) {
                    var etkinliklerHtml = '';
                    response.forEach(function(etkinlik) {
                        etkinliklerHtml += `
                            <div class="etkinlik-card">
                                <div class="etkinlik-image">
                                    <img src="${etkinlik.resimYolu}" alt="${etkinlik.baslik}">
                                </div>
                                <div class="etkinlik-content">
                                    <h3>${etkinlik.baslik}</h3>
                                    <p class="etkinlik-tarih">
                                        <i class="fas fa-calendar"></i>
                                        ${new Date(etkinlik.tarih).toLocaleDateString('tr-TR')}
                                    </p>
                                    <p class="etkinlik-aciklama">${etkinlik.aciklama}</p>
                                    ${etkinlik.konum ? `
                                        <p class="etkinlik-konum">
                                            <i class="fas fa-map-marker-alt"></i>
                                            ${etkinlik.konum}
                                        </p>
                                    ` : ''}
                                </div>
                            </div>
                        `;
                    });
                    $('#etkinliklerContainer').html(etkinliklerHtml);
                },
                error: function(xhr, status, error) {
                    console.error('Etkinlikler yüklenirken hata oluştu:', error);
                }
            });
        }

        $(document).ready(function() {
            loadEtkinlikler();
        });
    </script>
} 